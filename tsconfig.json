{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true, // Включить импорт с расширениями .ts и .tsx
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
